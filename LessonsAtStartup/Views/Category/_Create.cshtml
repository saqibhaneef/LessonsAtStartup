@model CategoryModel 

@{
    Layout = null;
}


<form Id="SaveForm" method="post">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create New Category</h5>
        <button type="button" class="btn-close close" data-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div class="col-md-12 input-group">
            <div class="col-md-12 p-1">
                <div class="form-group">
                    <label for="inputTitle">Name</label>
                    <input type="text" asp-for="Name" class="form-control" id="inputTitle" placeholder="Enter name">
                </div>
            </div>  
            <div class="col-md-12 p-1">
                <div class="form-group">
                    <label for="inputTitle">Description</label>
                    <input type="text" asp-for="Description" class="form-control" id="inputTitle" placeholder="Enter Description">
                </div>
            </div>
        </div>               
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary" id="btnSave">Save</button>
    </div>
</form>

<script>
    $("#SaveForm").submit(function (e) {
        e.preventDefault();        
        var fdata = new FormData(this);       
        $.ajax({
            type: 'post',
            url: "Category/Create",
            data: fdata,
            processData: false,
            contentType: false,
            success: function (response) {
                $('#categoryModal').modal('hide');
                $('.modal-backdrop').remove();
                if (response == "ok") {
                    $('#ajaxresult').load('@Url.Action("_categoriesList")');
                    swal({
                        title: "Succes",
                        text: "Record added",
                        icon: "success",
                        button: "Ok",
                    });
                }
                else {
                    swal({
                        title: "Info",
                        text: "Something went wrong!",
                        icon: "info",
                        button: "Ok",
                    });
                }
            },
            error: function (error) {
                alert(error);
            }

        })
    });
</script>
